<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:progress="65"
        app:indicatorColor="@color/colorPrimaryBlue"
        app:indicatorInset="0dp"
        app:trackColor="@color/colorBorder"
        app:trackCornerRadius="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/colorTextMedium"
            android:textSize="12sp"
            android:text="@string/hint_steps" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doneSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/colorTextMedium"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:textColor="@color/colorPrimaryBlue"
                tools:text="5000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/colorLight"
                android:textSize="20sp"
                android:text="/" />
            <TextView
                android:id="@+id/targetSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/colorLight"
                android:textSize="20sp"
                tools:text="6000" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>