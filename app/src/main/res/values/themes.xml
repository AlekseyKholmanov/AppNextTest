<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppNextApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/colorTextPrimary</item>
        <item name="chipStyle">@style/Widget.AppNext.Chip</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimaryBlueVariant</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_app_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AppNextApp</item>
    </style>
</resources>